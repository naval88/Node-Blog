<!DOCTYPE html>
<html lang="en">
<head>
<% include ../partials/head %>
</head>
<body class="home">
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="logo">
                    <a hef="home.html"><img src="/../public/images/logo.png" alt="merkery_logo" class="hidden-xs hidden-sm">
                        <img src="/../public/images/logo.png" alt="merkery_logo" class="visible-xs visible-sm circle-logo">
                    </a>
                </div>
                <div class="navi">
                  <% include ../partials/menu %>
                </div>
            </div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">
                <!--<button type="button" class="slide-toggle">Slide Toggle</button> -->
                <div class="row">
                     <% include ../partials/header %>
                </div>
                <div class="user-dashboard">
                     <div class="data-table">
			            <table class="table" border="1" cellpadding="7" cellspacing="7">
			                <tr>
			                    <th width="50px">No</th>
			                    <th>Name</th>
			                    <th>Email</th>
			                    <th width="120px">Action</th>
			                </tr>
			                               
			                <% if(data.length){ 
			                                
			                 for(var i = 0;i < data.length;i++) { %>
			                 
			                <tr>
			                    <td><%=(i+1)%></td>
			                    <td><%=data[i].name%></td>
			                    <td><%=data[i].email%></td>
			                    <td>
			                        <a class="a-inside edit" href="../customers/edit/<%=data[i].id%>"><i class="fa fa-edit" style="font-size:24px"></i></a>
			                       
			                        <a class="a-inside delete" href="../customers/delete/<%=data[i].id%>"><i class="fa fa-trash" style="font-size:24px"></i></a>
			                       
			                    </td>
			                </tr>
			            <% }
			            
			             }else{ %>
			                 <tr>
			                    <td colspan="3">No user</td>
			                 </tr>
			            <% } %>	
			            </table>
         			</div>
                </div>
            </div>
        </div>
    </div>
    <% include ../partials/add_manager_model %>
</body>